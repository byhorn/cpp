{
	"window.autoDetectColorScheme": true,
	"window.commandCenter": false,
	"window.density.editorTabHeight": "default",
	"window.zoomPerWindow": false,
	"window.zoomLevel": 1,

	"workbench.activityBar.location": "hidden",
	"workbench.colorTheme": "Default Light Modern",
	"workbench.editor.showTabs": "multiple",
	"workbench.layoutControl.enabled": false,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.sideBar.location": "left",
	"workbench.statusBar.visible": false,

	"explorer.autoOpenDroppedFile": true,
	"explorer.autoReveal": true,
	"explorer.autoRevealExclude": { "**/node_modules": true, "**/bower_components": true },
	"explorer.compactFolders": true,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	"explorer.confirmUndo": "default",
	"explorer.copyPathSeparator": "/",
	"explorer.copyRelativePathSeparator": "/",
	"explorer.decorations.badges": true,
	"explorer.decorations.colors": true,
	"explorer.enableDragAndDrop": true,
	"explorer.enableUndo": true,

	"search.actionsPosition": "right",
	"search.collapseResults": "alwaysExpand",
	"search.decorations.badges": true,
	"search.decorations.colors": true,
	"search.defaultViewMode": "list",
	"search.exclude": { "**/node_modules": true, "**/bower_components": true, "**/*.code-search": true },

	"git.enabled": true,
	"git.ignoreLimitWarning": true,
	"git.openRepositoryInParentFolders": "never",

	"debug.toolBarLocation": "floating",

	"extensions.closeExtensionDetailsOnViewChange": false,
	"extensions.ignoreRecommendations": true,
	"extensions.supportNodeGlobalNavigator": false,
	"extensions.supportVirtualWorkspaces": {},
	"extensions.webWorker": "auto",

	"breadcrumbs.enabled": false,

	"editor.autoIndent": "none",
	"editor.detectIndentation": false,
	"editor.fontSize": 13,
	"editor.lineHeight": 0,
	"editor.lineNumbers": "on",
	"editor.insertSpaces": false,
	"editor.indentSize": "tabSize",
	"editor.showFoldingControls": "always",
	"editor.tabSize": 4,
	"editor.minimap.enabled": true,
	"editor.minimap.autohide": "scroll",
	"editor.minimap.scale": 1,
	"editor.wordWrap": "off",
	"editor.wordWrapColumn": 80,

	"notebook.output.textLineLimit": 30,
	"notebook.lineNumbers": "on",
	"notebook.cellToolbarLocation": { "default": "right", "jupyter-notebook": "left" },

	"terminal.integrated.fontSize": 13,
	"terminal.integrated.defaultLocation": "view",

	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,
	"files.enableTrash": true,
	"files.eol": "\n",
	"files.exclude": { "**/.git": false, "**/.svn": false, "**/.hg": false, "**/.DS_Store": false, "**/Thumbs.db": false },
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.trimTrailingWhitespaceInRegexAndStrings": true,

	"task.problemMatchers.neverPrompt": { "shell": true },

	"[carbon]": { "editor.insertSpaces": false, "editor.tabSize": 4 },
	"[jsonc]": { "editor.insertSpaces": false, "editor.tabSize": 4 },
	"[makefile]": { "editor.insertSpaces": false, "editor.tabSize": 4 },
	"[markdown]": { "editor.unicodeHighlight.ambiguousCharacters": false, "editor.unicodeHighlight.invisibleCharacters": false, "diffEditor.ignoreTrimWhitespace": false, "editor.wordWrap": "off", "editor.quickSuggestions": { "comments": "off", "strings": "off", "other": "off" } },
	"[plaintext]": { "editor.unicodeHighlight.ambiguousCharacters": false, "editor.unicodeHighlight.invisibleCharacters": false, "editor.wordWrap": "on", },

	"jupyter.askForKernelRestart": false,

	"github.copilot.enable": { "*": true, "plaintext": false, "markdown": false, "scminput": false },
	"github.copilot.editor.enableAutoCompletions": true,
	"github.copilot.preferredAccount": "personal",
}
